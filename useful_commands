# to install all packages in requirements.txt
pip install -r requirements.txt

# to output all installed package to requirements.txt
pip freeze > requirements.txt

# to install requests package
pip install requests

# to create virtual environment called "env"
python -m venv env

# to check python version
python --version

# query Google OAuth2 token info (for valid token ONLY)
curl "https://oauth2.googleapis.com/tokeninfo?access_token=ACCESS_TOKEN"